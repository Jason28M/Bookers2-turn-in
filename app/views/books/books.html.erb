<% if @book.errors.any? %>
	<span class="text-danger">error!<br></span>
	<span class="text-danger"><%= @book.errors.full_messages.each do |message| %></span>
	<% end %>
<% end %>

<div class="container">
	<div class="row">
		<%= render 'books/list', book: @book, user: @user %>
		<div class="col-xs-9">
			<h1>Books</h1>
			<table class="table">
				<thead>
					<tr>
						<th colspan="1"></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td><%= link_to user_path(book.user.id) do %>
							<%= attachment_image_tag book.user, :profile_image,fallback:"no_image.jpg", size:"50x50" %>
							<% end %>
							</td>
						<td><%= link_to book.title, book_path(book) %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
<p class="text-right">CopyRight Infratop.inc</p>