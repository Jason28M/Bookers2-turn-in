<div class="col-xs-3">
			<h1>User info</h1>
			<div class="image"><%= attachment_image_tag user, :profile_image, fallback:"no_image.jpg", size:"50x50" %></div>
			<div class="name">
				<span class="text-primary">name</span>
				<span><%= user.name %></span>
			</div>
			<div class="intro">
				<span class="text-primary">introduction</span>
				<span><%= user.introduction %></span>
			</div>
			<% if current_user.id == user.id %>
			<%= link_to edit_user_path(current_user.id) do %>
			<button type="button" class="btn btn-default" aria-label="Left Align"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button>
			<% end %>
			<% else %>
			<% end %>
			<div class="New_Book">
				<h1>New book</h1>
			<%= form_for(book, url: '/books') do |f| %>
				<h5>Title</h5>
				<%= f.text_field :title %>
				<h5>Opinion</h5>
				<%= f.text_area :body %>
				<%= f.submit 'Create Book' %>
			<% end %>
			</div>
		</div>