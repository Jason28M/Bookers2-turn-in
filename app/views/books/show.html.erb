<p class="text-success"><% if flash[:success] %></p>
<div class="success">
</div>
<% end %>
<p class="text-success"><% if flash[:success_edit] %></p>
<% end %>
<div class="container">
	<div class="row">
		<%= render 'books/list', book: @book_new, user: @user %>
		<div class="col-xs-9">
			<h1>Book detail</h1>
			<table class="table">
				<tbody>
					<tr>
						<td>
							<%= link_to user_path(@user.id) do %>
							<%= attachment_image_tag @user, :profile_image, fallback:"no_image.jpg", size:"50x50" %>
							<%= @user.name %>
							<% end %>
						</td>
						<td><%= link_to @book.title, book_path(@book.id) %></td>
						<td><%= @book.body %></td>
						<% if @book.user.id == current_user.id %>
						<td><%= link_to "Edit", edit_book_path(@book) %></td>
						<td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" =>"本当に消しますか？" %>
							<% end %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
