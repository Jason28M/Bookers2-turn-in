<% if @book.errors.any? %>
<span class="text-danger">error!<br></span>
<% @book.errors.full_messages.each do |message| %>
	<span class="text-danger"><%= message %><br></span>
	<% end %>
<% end %>

<h1>Editing Book</h1>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Opinion</p>
<%= f.text_area :body %>
<%= f.submit 'Update Book' %>
<% end %>
<%= link_to "Show", book_path(@book) %>
<%= link_to "Back", "/books" %>
<p>CopyRight Infratop.inc</p>